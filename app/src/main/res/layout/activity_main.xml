<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F8BAA"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sabiasque"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="629dp"
        android:text="¿Sabias que?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/curiosidad"
        android:layout_width="331dp"
        android:layout_height="382dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="222dp"
        android:text="El zinc se encuentra en todas las células del cuerpo humano, en la tierra, en los alimentos que comemos y en los productos que utilizamos."
        android:textColor="#F1F4F1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206"
        tools:layout_editor_absoluteX="12dp" />

    <Button
        android:id="@+id/VerOtroBoton"
        android:layout_width="163dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="604dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="46dp"
        android:backgroundTint="#9C27B0"
        android:onClick="boton4"
        android:text="Button 4"
        android:textColor="#121111"
        android:textColorHighlight="#0E0E0E"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="160dp" />

    <Button
        android:id="@+id/verOtroBoton2"
        android:layout_width="168dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="522dp"
        android:layout_marginEnd="195dp"
        android:layout_marginBottom="127dp"
        android:backgroundTint="#BF3030"
        android:onClick="boton2"
        android:text="Button 2"
        android:textColor="#121111"
        android:textColorHighlight="#0E0E0E"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="160dp" />

    <Button
        android:id="@+id/verOtroBoton1"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="213dp"
        android:layout_marginTop="609dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#3BA2D1"
        android:onClick="boton1"
        android:text="Button 1"
        android:textColor="#121111"
        android:textColorHighlight="#0E0E0E"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="160dp" />

    <Button
        android:id="@+id/verOtroBoton3"
        android:layout_width="201dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="213dp"
        android:layout_marginTop="524dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="125dp"
        android:backgroundTint="#4CAF50"
        android:onClick="boton3"
        android:text="Button 3"
        android:textColor="#121111"
        android:textColorHighlight="#0E0E0E"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="160dp" />

</RelativeLayout>